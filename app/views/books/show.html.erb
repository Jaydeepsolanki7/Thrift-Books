
<div class="card shadow border border-0 mt-4" style="width: 80rem; height: 40rem;">
  <div class="row">
    <div class="col-md-6 mt-3">
        <%= image_tag @book.cover_image, height:558, width:470 %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h4 class="card-title bg-dark text-light text-center"><%= @book.title %></h4>
        <h5 class="card-title">price: <%= @book.price %></h5>
        <h6 class="card-text badge rounded-pill bg-dark">rating: <%= @book.rating %></h6>


        <p class="card-text"><strong>Description: </strong> <%= @book.description %></p>
          <% if current_user.nil?%>
            <div class="d-grid gap-2">
              <%= link_to "Buy-Now", "#", class:"btn btn-outline-danger" %>
            </div>
          <% elsif current_user.id == @book.author_id %>
            <div class="d-grid gap-2">
              <%= link_to "Edit", edit_category_book_path, class:"btn btn-outline-warning" %>
            </div>
          <% else %>
            <div class="d-grid">
              <%= link_to "Buy-Now", new_checkout_path(book_id: @book.id), class:"btn btn-outline-danger lg-3 mt-3" %>
            <div>
          <% end %>
        <p class="card-text"><small class="text-muted"> </small></p>
      </div>
    </div>
  </div>
</div>