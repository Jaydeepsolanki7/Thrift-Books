<div class="card shadow border border-0 mt-4" style="width: 70rem; height: 40rem;">
  <div class="row">
    <div class="col-md-6">
        <div class="mt-2 zoom"><%= image_tag @book.cover_image, height:558, width:470 %></div>
    </div>
    <div class="col-md-6">
      <div class="card-body ">
        <h4 class="card-title bg-dark text-light text-center"><%= @book.title %></h4>
        <h5 class="card-title">price: <%= @book.price %></h5>
        <h6 class="card-text badge rounded-pill bg-dark">rating: <%= @book.rating %></h6>


        <p class="card-text"><strong>Description: </strong> <%= @book.description %></p>
          <% if current_user.nil?%>
            <center>
              <%= button_to "Buy-Now", checkout_create_path, params: {id: @book.id}, class:"btn btn-outline-danger btn-lg btn-block mt-3",  data: { turbo: false }  %>
            </center>
          <% elsif current_user.id == @book.author_id %>
            <div class="d-grid gap-2">
              <%= link_to "Edit", edit_category_book_path, class:"btn btn-outline-warning" %>
            </div>
          <% else %>
            <center>
            <%= button_to "Buy-Now", checkout_create_path, params: {id: @book.id}, class:"btn btn-outline-danger btn-lg btn-block mt-3",  data: { turbo: false }  %>
            </center>
          <% end %>
        <p class="card-text"><small class="text-muted"> </small></p>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="mt-5 bg-dark text-light">
  <h1 style=text-align:center>Overview</h1>
</div>
<div class="row mt-2">
  <div class="col-md-6 ">
    <% if @book.pages.attached? %>
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner" >
          <% @book.pages.each do |page| %>
          <div class="carousel-item active">
            <%= image_tag rails_blob_path(page, only_path: true), class: "mb-4 page_margin", height:700, width:456%>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <div class="col-md-1">
    <div class="vl"></div>
  </div>
  <div class="col-md-5">
      <div><h1 class="mt-5">Hello</h1></div>
  </div>
</div>
<% end %>
