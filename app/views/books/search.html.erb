<h1>Search Results for "<%= @query %>"</h1>
<div class="row">
  <div class="col-md-8 mx-auto mt-5">

  <% if @books.any? %>
      <% @books.each do |book| %>
        <h3 class="d-grid gap-2"><%= link_to book.title, category_book_path(book.category_id, book), class:"searched btn btn-outline-warning btn-lg btn-block " %></h3>
      <% end %>
  <% else %>
    <h3 class="mt-4">No results found.</h3>
  <% end %>
  </div>
</div>