<section class="login-bloc shadow">
  <div class="container">
    <div class="row">
      <div class="col-md-4 login-sec">
        <h2 class="text-center mt-4 ">Login Now</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, auto: "current-password", class:"form-control" %>
          </div>
        
        
          <div class="form-check">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me  %>
              </div>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class:"btn btn-success" %>
          </div> 
        <% end %>
        <%= render "devise/shared/links" %>
      
        <div class="copy-text">Created <i class="fa fa-heart"></i> by Jaydeep</div>
      </div>
      <div class="col-md-8 banner-sec mt-2">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src=https://img.freepik.com/premium-photo/open-book-with-planets-stars-space-generative-ai_391052-22240.jpg?w=900 alt="First slide"  style="width: 70rem;  height: 30rem;">
          <div class="carousel-caption d-none d-md-block"></div>
        </div>
      </div>	   
    </div>
  </div>
</section>