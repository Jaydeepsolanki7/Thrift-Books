<div class="row mt-3">
  <div class="col-lg-12 category_show">
    <h1 class="mt-4"><%= @category.name%> Books</h1>
    <div class="row mt-3">
      <% @books.each do |book| %>
        <div class="card shadow me-2 mb-2" style="width: 15rem; height: 24rem; ">
          <div class="my-auto mx-auto ">
            <% if book.cover_image.attached? %>
              <center><%= image_tag book.cover_image, height:200, width:150 %></center>
            <% end %>
            <div card="card-body">
                <center><strong class="card-title ms-3 mt-3"><%= book.title %></strong></center>
                <center><strong class="badge rounded-pill bg-dark ">Price: <%= book.price %></strong></center>
              <div>
                <center><%= link_to "View Details",category_book_path(@category, book), params:{book_id: book.id}, class:"btn btn-outline-success mt-3"%><center>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if user_signed_in? && current_user.has_role?(:author) %>
  <div class="row mt-5">
    <div class="col-md-3 ms-auto">
      <%= link_to "create new book", new_category_book_path(@category), class:"btn btn-outline-dark" %>
    </div>
  </div>
<% end %>